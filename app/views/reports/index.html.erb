<!DOCTYPE html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src = "http://code.highcharts.com/highcharts.js"></script>
<script src = "http://code.highcharts.com/modules/exporting.js"></script>
<script src="http://code.highcharts.com/modules/drilldown.js"></script>

<!-- Additional files for the Highslide popup effect -->
<script src="http://www.highcharts.com/joomla/media/com_demo/js/highslide-full.min.js"></script>
<script src="http://www.highcharts.com/joomla/media/com_demo/js/highslide.config.js" charset="utf-8"></script>
<link rel="stylesheet" type="text/css" href="http://www.highcharts.com/joomla/media/com_demo/highslide.css" />

<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<link href="http://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" type="text/css" />

<%
   # MEMO: Render highest_rating first
  table_items ||= @highest_rating
%>
<html>
  <table border = "1" id = "rate_table">
    <thead>
    <caption>Highest Rated</caption>
    <tr>
      <th>Book Name</th>
      <th>Rate</th>
    </tr>
    </thead>
    <%= render "table_item", :table_items => table_items %>
  </table>

  <% table_items = @best_seller_by_volume %>

  <table border = "1" id = "sale_table">
    <thead>
      <caption>Best Seller</caption>
      <tr>
        <th>Book Name</th>
        <th>Volume sold</th>
      </tr>
    </thead>
    <%= render "table_item", :table_items => table_items %>
  </table>

  <script>
    <%= render 'genrepiechart.js.erb' %>
    <%= render 'linechart.js.erb' %>
    <%= render 'genrepiechart_test.js.erb' %>
  </script>
  <div id="genre_pie_chart_container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
  <div id="genre_pie_chart_container_test" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
  <div id="line_chart_container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
</html>